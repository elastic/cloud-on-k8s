{
  "extends": [
    "config:recommended"
  ],
  "labels": [
    ">renovate"
  ],
  "schedule": [
    "after 1am on monday"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "k8s.io"
      ],
      "groupName": "k8s"
    },
    {
      "matchPackageNames": [
        "k8s.io/utils",
        "golang.org/x/crypto",
        "golang.org/x/net",
        "golang.org/x/exp",
        "golang.org/x/oauth2",
        "github.com/elastic/cloud-on-k8s/v2"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "enabled": false
    },
    {
      "description": "The definition in the design document for a Docker image a) isn't a valid Docker image, and b) shouldn't be kept up-to-date even if so, as design docs should be a point-in-time reference",
      "matchPackageNames": [
        "docker.elastic.co/k8s-operators"
      ],
      "matchFileNames": [
        "docs/design/0005-configurable-operator.md"
      ],
      "enabled": false
    }
  ]
}
