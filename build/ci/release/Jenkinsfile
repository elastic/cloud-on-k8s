pipeline {

    agent {
        label 'linux'
    }

    environment {
        REGISTRY = 'eu.gcr.io'
    }

    options {
        timeout(time: 1, unit: 'HOURS')
    }

    stages {
        stage('Build and push release image') {
            steps {
                sh 'make -C build/ci ci-release'
            }
        }
    }

    post {
        cleanup {
            cleanWs()
        }
    }

}
