pipeline {

    agent {
        label 'linux'
    }

    options {
        timeout(time: 1, unit: 'HOURS')
    }

    stages {
        stage('Checkout from GitHub') {
            steps {
                checkout scm
            }
        }
        stage("Run E2E tests") {
            steps {
                sh 'make -C build/ci ci-e2e'
            }
        }
    }

    post {
        unsuccessful {
            slackSend botUser: true,
                      channel: '???',
                      color: 'danger',
                      message: 'E2E tests build ${env.BUILD_NUMBER} failed!',
                      tokenCredentialId: 'cloud-ci-slack-integration-token'
        }
        cleanup {
            cleanWs()
        }
    }

}
