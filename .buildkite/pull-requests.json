{
  "jobs": [
    {
      "enabled": true,
      "pipeline_slug": "cloud-on-k8s-operator",
      "allow_org_users": true,
      "allowed_repo_permissions": ["admin", "write"],
      "allowed_list": ["renovate[bot]"],
      "build_on_commit": true,
      "build_on_comment": true,
      "trigger_comment_regex": "^(?:(?:buildkite\\W+)?(?:build|test|release)\\W+)",
      "always_trigger_comment_regex": "^(?:(?:buildkite\\W+)?(?:build|test|release)\\W+)",
      "skip_ci_labels": ["skip-ci"],
      "skip_ci_on_only_changed": ["\\.asciidoc$"]
    }
  ]
}
